@echo off
echo Запуск приложения аудио-стриминга...

cd %~dp0

:: Запускаем сервер в отдельном окне
start cmd /k ".\start-server.bat"

:: Даем серверу 3 секунды на запуск
timeout /t 3

:: Запускаем клиент в отдельном окне
start cmd /k ".\start-client.bat"

